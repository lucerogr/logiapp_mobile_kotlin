<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.logiapplication">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.LogiApplication.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".ChangePassword"></activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LogiApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".logisticOperator.LogisticMainActivity" />
        <activity android:name=".carrier.ui.syncup.ConnectionActivity" />
        <activity android:name=".logisticOperator.ui.register.NextRegisterActivity" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".carrier.CarrierMainActivity" />
        <activity android:name=".logisticOperator.ui.followup.ViewRegisterCargoActivity" />
        <activity android:name=".logisticOperator.ui.followup.ModifyCargoActivity" />
        <activity android:name=".logisticOperator.ui.followup.ModifyProductsActivity" />
        <activity android:name=".logisticOperator.ui.reporting.ConditionsActivity" />
        <activity android:name=".logisticOperator.ui.reporting.FinalStateActivity" />
        <activity android:name=".client.ui.confirm.ConfirmCargoActivity" />
        <activity android:name=".client.ClientMainActivity" />
        <activity android:name=".client.ui.followup.ClientViewRegisterActivity" />
    </application>

</manifest>