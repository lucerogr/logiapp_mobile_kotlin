<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_rutas_finalizadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutas finalizadas"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TableLayout
        android:id="@+id/routes_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingTop="1dp"
        android:stretchColumns="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rutas_finalizadas"
        app:layout_constraintVertical_bias="0.17">

        <TableRow
            android:background="@color/gray"
            android:paddingRight="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/third_gray"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="#"
                android:layout_marginLeft="1dp"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@color/third_gray"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Carga"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@color/third_gray"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Estado de la ruta"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/third_gray"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:background="@color/gray"
            android:paddingRight="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:text="1"
                android:layout_marginLeft="1dp"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Cargo-007"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Finalizada"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:text="Confirmar"
                android:layout_weight="1.5"
                android:padding="5dp"/>

        </TableRow>

        <TableRow
            android:background="@color/gray"
            android:paddingRight="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:text="2"
                android:layout_marginLeft="1dp"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Cargo-009"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Finalizada"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btn_confirm_2"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:text="Confirmar"
                android:layout_weight="1.5"
                android:padding="5dp"/>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>